{
  "name": "git-credentials",
  "version": "1.0.1",
  "description": "Access the the git credential API by wrapping the `git credential` command.",
  "homepage": "https://github.com/sargunv/git-credentials",
  "repository": "github:sargunv/git-credentials",
  "license": "Apache-2.0",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig-build.json",
    "configure": "yarn dlx @yarnpkg/sdks vscode && ignore-sync .",
    "fix": "eslint . --fix && prettier --write .",
    "lint": "eslint . && prettier --check . --loglevel warn",
    "manual-test": "node manual-test.js",
    "prepack": "run build && run test-docs",
    "prepublish": "run lint && run test",
    "test": "vitest --run --coverage",
    "test-docs": "txm README.md"
  },
  "prettier": "@sargunv/prettier-config",
  "eslintConfig": {
    "extends": [
      "@sargunv/eslint-config",
      "@sargunv/eslint-config/mixins/typescript"
    ],
    "root": true
  },
  "dependencies": {
    "execa": "^7.0.0",
    "typanion": "^3.12.1"
  },
  "devDependencies": {
    "@sargunv/eslint-config": "^0.5.2",
    "@sargunv/prettier-config": "^0.2.2",
    "@sargunv/typescript-config": "^0.1.0",
    "@types/node": "^18.13.0",
    "@vitest/coverage-c8": "^0.28.4",
    "eslint": "^8.34.0",
    "ignore-sync": "^6.0.2",
    "prettier": "^2.8.4",
    "tempy": "^3.0.0",
    "txm": "^8.1.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.1",
    "vitest": "^0.28.4"
  },
  "packageManager": "yarn@4.0.0-rc.38",
  "engines": {
    "node": ">=16.0.0"
  },
  "languageName": "node",
  "publishConfig": {
    "access": "public"
  }
}
